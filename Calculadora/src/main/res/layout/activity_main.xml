<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.resistencias.MainActivity"
    android:orientation="vertical">

    <LinearLayout style="@style/LayoutStyle">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:id="@+id/eNumero"
            android:text="0"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">
        <Button style="@style/Buttonsyle"
            android:id="@+id/b7"
            android:text="7"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b8"
            android:text="8"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b9"
            android:text="9"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/bSuma"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">
        <Button style="@style/Buttonsyle"
            android:id="@+id/b4"
            android:text="4"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b5"
            android:text="5"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b6"
            android:text="6"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/bResta"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">
        <Button style="@style/Buttonsyle"
            android:id="@+id/b1"
            android:text="1"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b2"
            android:text="2"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b3"
            android:text="3"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/bMultiplicacion"
            android:text="*"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">
        <Button style="@style/Buttonsyle"
            android:id="@+id/bPunto"
            android:text="."/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/b0"
            android:text="0"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/bClear"
            android:text="C"/>
        <Button style="@style/Buttonsyle"
            android:id="@+id/bDivision"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle">
        <Button style="@style/Buttonsyle"
            android:id="@+id/bIgual"
            android:text="="/>

    </LinearLayout>



</LinearLayout>
