                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:text="5 BANDAS"
                     android:id="@+id/RB2"
                     android:onClick="OnRadioButtonClicked"
                     />
                 <RadioButton
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:text="6 BANDAS"
                     android:id="@+id/RB3"
                     android:onClick="OnRadioButtonClicked"

                     />
         </RadioGroup>

     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
